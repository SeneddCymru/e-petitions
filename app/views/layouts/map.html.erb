<!DOCTYPE html>
<html lang="en-GB">
  <head>
    <title><%= page_title %></title>
    <%= cache_for :head do %>
      <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

      <%= stylesheet_link_tag 'application' %>
      <%= stylesheet_link_tag 'frontend/map' %>
      <%= stylesheet_link_tag 'print', media: 'print' %>
      <meta name="viewport" content="width = device-width" />
      <%= render 'application/os' %>
      <%= render 'application/social_meta' %>
    <% end %>
    <% if noindex_page? %>
      <meta name="robots" content="noindex" />
    <% end %>
    <%= yield :head %>
  </head>
  <body>
    <%= render 'application/header' %>

    <main>
      <%= yield %>
    </main>

    <%= cache_for :footer do %>
      <%= javascript_include_tag 'application' %>
      <%= javascript_include_tag 'topojson.min' %>
      <%= javascript_include_tag 'petition-map' %>
    <% end %>

    <% if Site.translation_enabled? %>
      <%= javascript_include_tag admin_translations_url(:js), crossorigin: 'use-credentials' %>
    <% end %>

    <% if Site.cookie_control? && !holding_page? %>
      <%= render 'cookie_control' %>
    <% end %>
  </body>
</html>
